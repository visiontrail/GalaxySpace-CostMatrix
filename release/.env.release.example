# Core
COMPOSE_PROJECT_NAME=costmatrix
# Use the tag that matches the images in your release bundle (e.g. 20260203-local)
IMAGE_TAG=latest
BACKEND_IMAGE=costmatrix-backend
FRONTEND_IMAGE=costmatrix-frontend

# Network
BACKEND_PORT=8000
FRONTEND_PORT=8180

# Backend settings (mirrors backend/app/config.py)
APP_NAME=CostMatrix
APP_VERSION=1.0.0
DEBUG=false
ALLOWED_ORIGINS=http://localhost:8180
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=1440
DEFAULT_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD_FILE=/app/config/initial_admin_password.txt
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=200
