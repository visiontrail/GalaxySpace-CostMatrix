# Core
COMPOSE_PROJECT_NAME=costmatrix
# Use the tag that matches the images in your release bundle (e.g. 20260203-local)
IMAGE_TAG=latest
BACKEND_IMAGE=costmatrix-backend
FRONTEND_IMAGE=costmatrix-frontend

# Network
BACKEND_PORT=8000
FRONTEND_PORT=8180

# Backend settings (mirrors backend/app/config.py)
APP_NAME=CostMatrix
APP_VERSION=1.0.0
DEBUG=false
ALLOWED_ORIGINS=["http://localhost:8180"]
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=1440
DEFAULT_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD_FILE=/app/config/initial_admin_password.txt
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=200

# Database settings (default: MySQL)
# Preferred: full DSN (takes precedence over DB_* when not empty)
# DATABASE_URL=mysql+pymysql://user:password@db.example.com:3306/costmatrix?charset=utf8mb4

# Split config (used when DATABASE_URL is empty)
DB_TYPE=mysql
DB_HOST=172.16.5.146
DB_PORT=3306
DB_NAME=costmatrix
DB_USER=appuser
DB_PASSWORD=AppPass@2026
DB_CHARSET=utf8mb4
